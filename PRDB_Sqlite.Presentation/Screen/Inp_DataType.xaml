<Window x:Class="PRDB_Sqlite.Presentation.Screen.Inp_DataType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRDB_Sqlite.Presentation.Screen"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="Turquoise"
        ResizeMode="NoResize"
        Title="INPUT DATATYPE" Width="500" Height="351" >
    <StackPanel Margin="0,0,4,-4" >
        <Label Content="INPUT DATATYPE" HorizontalAlignment="Center" FontFamily="Arial" FontWeight="ExtraBold" FontSize="30"/>
        <Label />
        <StackPanel Orientation="Horizontal">
            <Label Content="Data Type" RelativePanel.AlignLeftWithPanel="True"/>
            <ComboBox Name="cbxDtt" Width="117" SelectionChanged="cbxDtt_SelectionChanged"/>
        </StackPanel>
        <Label/>
        <GroupBox Header="Details" FontSize="20" Foreground="SteelBlue">
            <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Data Name" />
                <TextBox Name="txtTypeName" IsEnabled="False" Width="310" />
                <Label />
            </StackPanel>
            <RichTextBox Name="rbValls" Height="90" IsEnabled="False" ></RichTextBox>
            </StackPanel>

        </GroupBox>
        <Label/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Name="btnOk" Click="btnOk_Click" Content="OK" Padding="5"/>
            <Label/>
            <Button Name="btnCancel" Click="btnCancel_Click" Content="Cencel" Padding="5"/>
        </StackPanel>
    </StackPanel>
</Window>
