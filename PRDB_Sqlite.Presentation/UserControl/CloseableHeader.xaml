<UserControl x:Class="PRDB_Sqlite.Presentation.UserControl.CloseableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRDB_Sqlite.Presentation.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="81" Margin="0">
    <Grid>
        <Button  Height="15" HorizontalAlignment="Right" Margin="0,3,1,6" 

          Name="button_close" VerticalAlignment="Center" Width="15"  FontFamily="Times New Roman" 

          FontWeight="Normal" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 

          FontStretch="Normal" Visibility="Visible" 

          FontSize="12" Padding="0" ToolTip="Close">
            <StackPanel>
                <Image Source="..\assets\Images\exit.ico" />
                <TextBlock></TextBlock>
            </StackPanel>
        </Button>
        <Label Content="TabItem"  Height="23" HorizontalAlignment="Left" 

          Margin="0,0,0,0" Name="label_TabTitle" VerticalAlignment="Top" 

          FontFamily="Courier" FontSize="12" />
    </Grid>
</UserControl>
