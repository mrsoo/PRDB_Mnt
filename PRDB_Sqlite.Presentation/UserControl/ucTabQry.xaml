<UserControl x:Class="PRDB_Sqlite.Presentation.UserControl.ucTabQry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRDB_Sqlite.Presentation.UserControl"
             mc:Ignorable="d" 
             KeyDown="UserControl_KeyDown"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
    <StackPanel Name="stpQry">

        <StackPanel x:Name="stpTbl"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            Orientation="Horizontal">
            <ToolBarTray x:Name="tlbQry" Grid.Row="0">
                <ToolBar FontWeight="Bold">
                        <Button Name="btnNewtab"  ToolTip="New a tab">
                            <StackPanel Orientation="Horizontal">
                                <Image  Width="20" Height="20" Source="/PRDB_Sqlite.Presentation;component/assets/Images/iconNewtab.png"/>
                                <TextBlock Text=" New Tab" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator/>
                        <Button Name="btnOpnQry" Click="btnOpnQry_Click" ToolTip="Open a query file">
                            <StackPanel Orientation="Horizontal">
                                <Image  Width="20" Height="20" Source="/PRDB_Sqlite.Presentation;component/assets/Images/iconOpenTab.Png"/>
                                <TextBlock Text=" Open Query" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator/>
                        <Button Name="btnSave" Click="btnSave_Click"  ToolTip="Save file">
                            <StackPanel Orientation="Horizontal">
                                <Image  Width="20" Height="20" Source="/PRDB_Sqlite.Presentation;component/assets/Images/iconSave.png"/>
                                <TextBlock Text=" Save" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator/>
                        <!--<Button Name="btnFind"  ToolTip="Find in text">
                            <StackPanel Orientation="Horizontal">
                                <Image  Width="20" Height="20" Source="/PRDB_Sqlite.Presentation;component/assets/Images/iconFind.png"/>
                                <TextBlock Text=" Find" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator/>-->
                        <Button Name="btnExec"  ToolTip="Execute query">
                            <StackPanel Orientation="Horizontal">
                                <Image  Width="20" Height="20" Source="/PRDB_Sqlite.Presentation;component/assets/Images/IconExcute.png"/>
                                <TextBlock Text=" Execute" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator/>
                        <Button Name="btnExecCur"  ToolTip="Execute Current line">
                            <StackPanel Orientation="Horizontal">
                                <Image  Width="20" Height="20" Source="/PRDB_Sqlite.Presentation;component/assets/Images/IconExcuteLine.png"/>
                                <TextBlock Text=" Execute Line" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator/>
                </ToolBar>
            </ToolBarTray>
        </StackPanel>

        <StackPanel x:Name="stpTab">
            
            <TabControl Name="TbQry">

                    <TabItem Header="new Tab 1"  Margin="0,0,0,0" Height="30"  Name="label_TabTitle" VerticalAlignment="Bottom" FontFamily="Courier" FontSize="14" >
                    <RichTextBox Name="rbxQry"
                                 FontFamily="Courier"
                                 FontSize="14">
                    </RichTextBox>
                      
                    </TabItem>
            </TabControl>
        </StackPanel>

        <StackPanel Name="stpData">
            <Border Grid.Row="1"
                Grid.Column="1"
                Opacity="0.7"
                BorderBrush="DarkCyan" 
                BorderThickness="20,1,20,2">
                <TextBlock x:Name="txtMessage"
                       HorizontalAlignment="Center"
                       FontFamily="Consolas"
                           Foreground="Black"
                           IsEnabled="False">
                </TextBlock>
            </Border>
                <ToolBarTray x:Name="tbDtgAction" Orientation="Horizontal">
                    <ToolBar>
                        <Button Name="btnView" Content="View" ToolTip="Change View"/>
                    </ToolBar>
                </ToolBarTray>

                <StackPanel Orientation="Vertical">
                  
                    <DataGrid Name="dtgDataResult"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      ColumnWidth="*"
                      FontSize="14"
                      HorizontalContentAlignment="Center"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                      GridLinesVisibility="All">
            </DataGrid>
                    
                </StackPanel>
            </StackPanel>
    </StackPanel>
    </ScrollViewer>
</UserControl>

