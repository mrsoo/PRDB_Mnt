<UserControl x:Class="PRDB_Sqlite.Presentation.UserControl.ucTabContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRDB_Sqlite.Presentation.UserControl"
             mc:Ignorable="d" 
             FontSize="12"
             Background="Transparent"
             BorderBrush="Blue"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
            <Label Name="lblCbx" VerticalContentAlignment="Center" Background="Transparent"></Label>
            <ComboBox Name="cbx" Background="Transparent" SelectedValuePath="Key" DisplayMemberPath="Value"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="Transparent">
            <Label />
            <DataGrid Name="dtg"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Background="Transparent"
                      ColumnWidth="*"
                      HorizontalContentAlignment="Center"
                      GridLinesVisibility="Vertical">

            </DataGrid>
        </StackPanel>


    </Grid>
</UserControl>
